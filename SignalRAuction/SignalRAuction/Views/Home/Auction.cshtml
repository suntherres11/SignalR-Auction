@{
    ViewBag.Title = "Buy a Property";
}

@section Top {
    <div id="user">
        Who are you?
        <input type="text" />
    </div>
}

<div id="picture">
    <img src="~/Content/Images/primo-iii-fb.jpg" />
</div>
<div id="auction">
    <div id="time">
        <span id="title-time">Remaining</span>
        <span id="value-time">
            <!-- time -->
        </span>
    </div>
    <div id="bid-send">
        <h3 id="title-bid-now">Do a bid now:</h3>
        <span id="currency">$</span>
        <input type="text" id="prod-value-bid" maxlength="5" readonly="readonly" />
        <input type="button" id="prod-btn-bid" value="Place Bid" />
    </div>
</div>


@section Bottom {
    <h2 id="total-bids">Already was done 
        <span>
            <!-- amount -->
        </span>
        bids
    </h2>
    <div id="recent-bids">
        <h3>Recent Bids</h3>
        <ul>
            <!-- time + user -->
        </ul>
    </div>

    <div id="message"></div>


}

@section Footer{
    <div id="footer">
        <div id="reset">
            @Html.ActionLink("Back to Home", "Index") /
            <a id="btn-reset" href="javascript:;">Reset Auction</a>
        </div>
    </div>
}

@section JavaScripts {

    <!--Reference the SignalR script. -->
    <script type="text/javascript" src="~/Scripts/jquery.signalR-1.0.0-rc2.min.js"></script>

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>

    <!--Reference the ours auction process scripts. -->
    <script src="~/Scripts/util/util-timer.js" type="text/javascript"></script>
    <script src="~/Scripts/app/app-auction.js" type="text/javascript"></script>
}